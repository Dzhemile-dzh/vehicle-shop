{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
<div class="flex items-center justify-center min-h-screen bg-gradient-to-r from-[#00121C] to-[#013954] px-4">
    <div class="bg-[#2A3B47] text-white p-8 rounded-lg shadow-lg max-w-md w-full">
        {% for flash_error in app.flashes('reset_password_error') %}
            <div class="bg-red-500 text-white px-4 py-2 rounded mb-4" role="alert">
                {{ flash_error }}
            </div>
        {% endfor %}

        <h1 class="text-2xl font-semibold text-center mb-6">Reset your password</h1>

        {{ form_start(requestForm, {'attr': {'class': 'space-y-4'}}) }}
            <div>
                <label for="requestForm_email" class="block text-slate-300 mb-2">Email</label>
                {{ form_widget(requestForm.email, {
                    'attr': {
                        'class': 'w-full rounded-lg bg-cyan-800 text-black py-2 px-4 focus:ring-2 focus:ring-amber-400 focus:outline-none'
                    }
                }) }}
            </div>

            <div>
                <small class="text-slate-300 block mb-4">
                    Enter your email address, and we will send you a link to reset your password.
                </small>
            </div>

            <div class="flex justify-end">
                <button type="submit" class="bg-amber-400 hover:bg-amber-500 text-white font-semibold py-2 px-6 rounded-lg transition duration-200">
                    Send password reset email
                </button>
            </div>
        {{ form_end(requestForm) }}
    </div>
</div>
{% endblock %}
