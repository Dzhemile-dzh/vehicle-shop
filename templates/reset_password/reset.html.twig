{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
<div class="flex items-center justify-center min-h-screen bg-gradient-to-r from-[#00121C] to-[#013954] px-4">
    <div class="bg-[#2A3B47] text-white p-8 rounded-lg shadow-lg max-w-md w-full">
        <h1 class="text-2xl font-semibold text-center mb-6">Reset your password</h1>

        {{ form_start(resetForm, {'attr': {'class': 'space-y-4'}}) }}
            <div>
                <label for="resetForm_plainPassword" class="block text-slate-300 mb-2">New Password</label>
                {{ form_widget(resetForm.plainPassword.first, {
                    'attr': {
                        'class': 'w-full rounded-lg bg-cyan-800 text-black py-2 px-4 focus:ring-2 focus:ring-amber-400 focus:outline-none'
                    }
                }) }}
            </div>

            <div>
                <label for="resetForm_plainPassword" class="block text-slate-300 mb-2">Confirm Password</label>
                {{ form_widget(resetForm.plainPassword.second, {
                    'attr': {
                        'class': 'w-full rounded-lg bg-cyan-800 text-black py-2 px-4 focus:ring-2 focus:ring-amber-400 focus:outline-none'
                    }
                }) }}
            </div>

            <div class="flex justify-end">
                <button type="submit" class="bg-amber-400 hover:bg-amber-500 text-white font-semibold py-2 px-6 rounded-lg transition duration-200">
                    Reset password
                </button>
            </div>
        {{ form_end(resetForm) }}
    </div>
</div>
{% endblock %}
