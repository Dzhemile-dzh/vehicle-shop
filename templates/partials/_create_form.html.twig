<div class="max-w-2xl mx-auto mt-10 p-6 bg-white/10 rounded-lg shadow-md">
    <h1 class="text-3xl font-semibold mb-6 text-center text-white">
        {{ title }}
    </h1>

    {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}

        {% for field in form %}
            <div class="flex flex-col">
                {{ form_label(field, null, {'label_attr': {'class': 'text-white font-medium mb-1'}}) }}
                {{ form_widget(field, {'attr': {'class': 'form-input bg-white/5 border border-white/20 rounded-lg py-2 px-4 focus:outline-none focus:ring-2 focus:ring-amber-400'}}) }}
                {{ form_errors(field) }}
            </div>
        {% endfor %}

        <div class="text-center mt-6">
            <button type="submit" class="w-full sm:w-auto bg-amber-400 text-white font-semibold py-2 px-4 rounded-lg hover:bg-amber-500 focus:outline-none focus:ring-2 focus:ring-amber-400 focus:ring-opacity-50">
                Create
            </button>
        </div>

    {{ form_end(form) }}
</div>
